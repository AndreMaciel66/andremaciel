---
const platform: string = "github";
const username: string = "AndreMaciel66";
import data from "@data/social.json";
import Social from "@components/Social.astro";
let socialMedia = data.socialMedia;
---

<footer>
  <h2>Where you can find me</h4>
  <!-- <div class="socialPane"> -->
    {
      socialMedia.map((social) => (
        <p>
          <Social platform={social.platform} username={social.username} />
        </p>
      ))
    }
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
    align-items: center;
    justify-content: center;
  }
  h2, p {
    margin-block-end: 0;
    margin-block-start: 0;
  }
</style>
